<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
            <!-- ...and here we setting appcompat’s color theming attrs -->
            <item name="colorPrimary">@color/highlight</item>
            <item name="colorPrimaryDark">@color/highlight_darker</item>
            <item name="colorAccent">@color/highlight</item>
            <item name="android:navigationBarColor">@android:color/black</item>
            <item name="android:colorButtonNormal">@color/highlight</item>
            <item name="android:textColorPrimary">@android:color/white</item>
            <item name="preferenceTheme">@style/PrefsTheme</item>
            <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/my_progress</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:minHeight">3dp</item>
    </style>

    <style name="PrefsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="android:colorAccent">@color/highlight</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/material_grey_850</item>
        <item name="android:textColorSecondaryInverse">@android:color/secondary_text_light</item>
        <item name="android:statusBarColor">@color/highlight</item>
        <item name="colorAccent">@color/highlight</item>
        <item name="colorPrimary">@color/highlight</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />
</resources>
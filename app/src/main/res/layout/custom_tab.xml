<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleDimension="2dp"
    app:mrl_rippleDuration="500"
    app:mrl_rippleOverlay="false"
    app:mrl_rippleDelayClick="false"
    app:mrl_rippleRoundedCorners="4dp"
    app:mrl_rippleColor="@color/background_material_light">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/psts_tab_title"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>
